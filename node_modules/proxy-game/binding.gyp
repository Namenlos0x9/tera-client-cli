{
	"targets": [{
		"target_name": "proxygame",
		"sources": ["src/main.cpp", "src/windivert.h"],
		"conditions": [
			["target_arch=='ia32'",
			{
				"msbuild_settings": {
					"Link": {
						"ImageHasSafeExceptionHandlers": "false"
					}
				},
				"libraries": ["../bin/ia32/WinDivert.lib"],
				"copies": [{
					"destination": "build/Release",
					"files": [
						"bin/ia32/WinDivert.dll",
						"bin/ia32/WinDivert32.sys"
					]
				}]
			}],
			["target_arch=='x64'",
			{
				"libraries": ["../bin/x64/WinDivert.lib"],
				"copies": [{
					"destination": "build/Release",
					"files": [
						"bin/x64/WinDivert.dll",
						"bin/x64/WinDivert64.sys"
					]
				}]
			}]
		]
	}]
}